@model Employee

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.FirstName" class="form-label">FirstName</label>
            <input type="text" class="form-control" asp-for="@Model.FirstName">
            <span asp-validation-for="@Model.FirstName" class="text text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.LastName" class="form-label">LastName</label>
            <input type="text" class="form-control" asp-for="@Model.LastName">
            <span asp-validation-for="@Model.LastName" class="text text-danger"></span>
        </div>
        <div class="mb-3">
            <select asp-for="@Model.PositionId" class="form-select" aria-label="Select employee position">
                <option selected>Choose Position</option>
                @foreach (var position in ViewBag.Positions)
                {
                    <option value="@position.Id">@position.Name</option>
                }
            </select>
            <span asp-validation-for="@Model.PositionId" class="text text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.FormFile" class="form-label">Image</label>
            <input type="file" accept="image/*" class="form-control" asp-for="@Model.FormFile">
            <span asp-validation-for="@Model.FormFile" class="text text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        @Html.AntiForgeryToken()
    </form>
</div>
