@model IEnumerable<Category>

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Update</th>
                <th scope="col">Remove</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>
                        <a asp-area="admin" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">
                            <i class="far fa-pen-to-square"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-area="admin" asp-controller="Category" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure?')">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-area="admin" asp-controller="Category" asp-action="Create" class="btn btn-success">Create Category</a>
</div>
