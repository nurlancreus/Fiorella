@model IEnumerable<BlogGetDto>

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Update</th>
                <th scope="col">Remove</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        <img src="~/assets/images/blog/@item.Image" alt="Blog image" class="img-thumbnail" style="max-width: 150px; max-height: 150px;" />
                    </td>
                    <td>
                        <a asp-area="admin" asp-controller="Blog" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">
                            <i class="far fa-pen-to-square"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-area="admin" asp-controller="Blog" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure?')">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-area="admin" asp-controller="Blog" asp-action="Create" class="btn btn-success">Create Blog</a>
</div>
